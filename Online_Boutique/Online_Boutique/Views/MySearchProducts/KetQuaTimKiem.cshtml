@using Online_Boutique.Models.MyModels;
@using PagedList;
@using PagedList.Mvc;

@model IPagedList<SanPham>


@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/TrangCon_Layout.cshtml";
}

<h3><i>@ViewBag.thongbao</i></h3>

<!--phần dưới cái banner...TẠI VÌ MỖI PARTIAL VIẾT ĐC CÓ 1 LOẠI TRUY VẤN ????-->

@section leftcontent{
   
}
<div class="new-product">
    <div class="new-product-top">
        <ul class="product-top-list">
            <li><a href="index.html">Home</a>&nbsp;<span>&gt;</span></li>
            <li><span class="act">Best Sales</span>&nbsp;</li>
        </ul>
        
        <div class="clearfix"></div>
    </div>
    <div class="mens-toolbar">
        
       
        <div class="clearfix"></div>
    </div>
    <div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
        <div class="cbp-vm-options">
            <a href="#" class="cbp-vm-icon cbp-vm-grid cbp-vm-selected" data-view="cbp-vm-view-grid" title="grid">Grid View</a>
            <a href="#" class="cbp-vm-icon cbp-vm-list" data-view="cbp-vm-view-list" title="list">List View</a>
        </div>

        <div class="clearfix"></div>
        <ul>
            @{
                foreach (var item in Model)
                {
                    <li>
                        <a class="cbp-vm-image" href="single.html">
                        </a><div class="simpleCart_shelfItem">
                            <a class="cbp-vm-image" href="single.html">
                                <div class="view view-first">
                                    <div class="inner_content clearfix">
                                        <div class="product_image">
                                            <img src="@Url.Content("~/HinhAnh/nu/" + @item.anhsp)" class="img-responsive anhsp" style="height:320px; width:300px;" alt="">
                                            <div class="mask">
                                                <div class="info">chi tiết</div>
                                            </div>
                                            <div class="product_container">
                                                <div class="cart-left">
                                                    <p class="title">@item.tensp</p>
                                                </div>
                                                <div class="pricey"><span class="item_price">@item.giabansp vnd</span></div>
                                                <div class="clearfix"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <div class="cbp-vm-details">
                                @item.motasp
                            </div>
                            <a class="cbp-vm-icon cbp-vm-add item_add" href="#">Add to cart</a>
                        </div>
                    </li>
                }

            }

        </ul>
    </div>
</div>
<script src="~/Content/web/js/cbpViewModeSwitch.js" type="text/javascript"></script>
<script src="~/Content/web/js/classie.js" type="text/javascript"></script>
</div>
<div class="clearfix"></div>
</div>
<div class="clearfix"></div>
    </div>
<!-- content-section-ends -->
<!-- phân trang...đánh số trang-->
@{

    if (Model.PageCount != 0)
    {
        <div style="float:right;margin-right:100px;">
            <span>Trang:  @Model.PageNumber/@Model.PageCount</span>
            <span>@Html.PagedListPager(Model, page => @Url.Action("KetQuaTimKiem", new { @page = page, @keyword= ViewBag.tukhoa }))</span>
        </div>

    }
}
