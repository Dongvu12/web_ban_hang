@model Online_Boutique.Areas.Admin.Models.Entites.LoaiSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("EditAction","Category",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Loại Sản Phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maloaisp)

        <div class="form-group">
            <label>Tên Loại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenloaisp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenloaisp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Giới Tính</label>
            <div class="col-md-10">
                <select name="gt" class="">
                    <option>@Model.gioitinh</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
